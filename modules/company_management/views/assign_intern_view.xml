<odoo>
    <record id="view_assign_intern_form" model="ir.ui.view">
        <field name="name">assign.intern.form</field>
        <field name="model">assign.intern.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="intern_ids" widget="many2many_tags" context="{'default_intern_ids': active_ids}"/>
                    </group>
                    <footer>
                        <button string="Xác nhận" name="action_confirm" type="object" class="btn-primary"/>
                        <button string="Hủy" special="cancel" class="btn-secondary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
